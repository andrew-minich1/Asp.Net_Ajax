@model ReadJsonFile.Models.RegistrationViewModel
@{
    ViewBag.Title = "Registration";
}

<section class="registration_page">
    <div class="login">
        <h1>Registration</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div>
                <p>
                    @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Enter login" })
                </p>
                <p>
                    @Html.ValidationMessage("UserName")
                </p>
            </div>
            <div>
                <p>
                    @Html.TextBox("UserEmail", null, new { @class = "form-control", @placeholder = "Enter email" })
                </p>
                <p>
                    @Html.ValidationMessage("UserEmail")
                </p>
            </div>
            <div>
                <p>
                    @Html.TextBox("UserPassword", null, new { @class = "form-control", @placeholder = "Enter password", @type = "password" })
                </p>
                <p>
                    @Html.ValidationMessage("UserPassword")
                </p>
            </div>
            <div>
                <p>
                    @Html.TextBox("PasswordConfirm", null, new { @class = "form-control", @placeholder = "Confirm password", @type = "password" })
                </p>
                <p>
                    @Html.ValidationMessage("PasswordConfirm")
                </p>
            </div>

            <div>
                <p>
                    <button type="submit" class="btn btn-default">
                        Sign in
                    </button>
                    <button type="reset" class="btn btn-default">
                        Reset
                    </button>
                </p>
            </div>
        }
    </div>
</section>
